{
  "name": "vert-frais",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prebuild": "rm -rf ./dist && mkdir dist/",
    "build": "npm run js & npm run css & npm run jade & npm run image",
    "jade": "jade --pretty ./src/*.jade -o ./dist && browser-sync reload",
    "css": "pleeease-compile && browser-sync reload",
    "js": "webpack && browser-sync reload",
    "image": "imagemin ./src/images/* ./dist && browser-sync reload",
    "watch": "npm run build && npm run server & npm run js:watch & npm run css:watch & npm run jade:watch",
    "css:watch": "nodemon --ext scss --watch src/ --exec \"npm run css\"",
    "js:watch": "nodemon --ext js --watch src/ --exec \"npm run js\"",
    "jade:watch": "nodemon --ext jade --watch src/ --exec \"npm run jade\"",
    "image:watch": "nodemon --ext jpg,jpeg,png,ico,svg,gif --watch src/ --exec \"npm run image\"",
    "server": "browser-sync start --server dist"
  },
  "author": "Les Polypodes <contact@lespolypodes.com>",
  "license": "ISC",
  "dependencies": {
    "babel": "^5.8.19",
    "babel-core": "^5.8.20",
    "babel-loader": "^5.3.2",
    "bootstrap-sass": "^3.3.5",
    "browser-sync": "^2.8.1",
    "csslint": "^0.10.0",
    "imagemin": "^3.2.0",
    "imagemin-cli": "^1.0.0",
    "jade": "^1.11.0",
    "nodemon": "^1.4.0",
    "npm-watch": "0.0.0",
    "pleeease": "^3.4.0",
    "pleeease-cli": "^3.2.8",
    "webpack": "^1.10.5"
  }
}
